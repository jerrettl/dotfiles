new_window pixel 1


# Select display
set $select_display Select a display mode: (P)rimary, (S)econdary, (M)irror, or (E)xtend
bindsym $mod+F7 mode "$select_display"

mode "$select_display" {
	bindsym p exec --no-startup-id ~/dotfiles/scripts/select-monitor.sh primary, mode "default"
	bindsym s exec --no-startup-id ~/dotfiles/scripts/select-monitor.sh secondary, mode "default"
	bindsym m exec --no-startup-id ~/dotfiles/scripts/select-monitor.sh mirror, mode "default"
	bindsym e exec --no-startup-id ~/dotfiles/scripts/select-monitor.sh extend, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}


# Music mode
set $music_mode Select a music player: (C)hrome, (F)irefox, (P)ianobar, or (S)potify
bindsym $mod+Shift+m mode "$music_mode"
bindsym $mod+Shift+p mode "$music_mode"

mode "$music_mode" {
	bindsym c exec --no-startup-id echo -n "chrome" > ~/.musicmode, mode "default"
	bindsym f exec --no-startup-id echo -n "firefox" > ~/.musicmode, mode "default"
	bindsym p exec --no-startup-id echo -n "pianobar" > ~/.musicmode, mode "default"
	bindsym s exec --no-startup-id echo -n "spotify" > ~/.musicmode, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

