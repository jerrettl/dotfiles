# vim: syntax=sh

# ==== Commands
alias cls='clear'
alias cp="cp -i"                          # confirm before overwriting something
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias l='ls -alh --color=auto -F'
alias la='ls -alh --color=auto -F'
alias ll='ls -lh --color=auto -F'
alias less='less --QUIET'
alias more=less

alias su='sudo -Es'
alias sudo='sudo --preserve-env '

alias v='$EDITOR'
alias vim='$EDITOR'

alias ga='git add'
alias gap='git add -p'
alias gc='git commit -m'
alias gca='git commit -am'
alias gd='git diff'
alias gdc='git diff --cached'
alias gp='git push'
alias gst='git status -uno'
alias gstu='git status -uall'

alias pacman='pacman --color=auto'
alias dmenu='dmenu -nb "#303030" -nf "#ffffff" -sb "#ffffff" -sf "#303030" -fn "HelveticaNeue-11"'
alias e="emacsclient -c --alternate-editor emacs"
alias cpum='~/dotfiles/scripts/change-cpu-mode.sh'
alias smpv='i3-swallow mpv'

alias ranger='RANGER_TMP_LOCATION=$(mktemp); ranger --choosedir="$RANGER_TMP_LOCATION"; cd "$(cat "$RANGER_TMP_LOCATION")"; rm "$RANGER_TMP_LOCATION"; unset RANGER_TMP_LOCATION'
alias rr='ranger'

alias pu='sudo pacman -Syyu'
alias yayu='yay -Syyu -a'

alias gcc-strict="gcc -Wall -Wstrict-prototypes -Wmissing-prototypes -Wshadow -Wconversion -Wextra -Wformat-nonliteral -Wformat-security -Wformat-y2k"
alias clang-strict="clang -Weverything"

# ==== Common Directories
alias dotf='cd $DOTFILES && gstu'

alias download-playlist='youtube-dl --extract-audio --audio-format mp3 --embed-thumbnail --no-post-overwrites -o "%(playlist_index)03d - %(title)s.%(ext)s"'
